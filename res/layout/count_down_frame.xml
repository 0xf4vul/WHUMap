<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="4dp"
    android:background="@drawable/count_down_background" >

    
        <TextView
            android:id="@+id/count_down_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/count_down_days_size" />

        <TextView
            android:id="@+id/count_down_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/count_down_days"
            android:layout_centerHorizontal="true"
            android:text="@string/count_down_text_2"
            android:textSize="@dimen/count_down_text_size" />

        <TextView
            android:id="@+id/count_down_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/count_down_days"
            android:layout_centerHorizontal="true"
            android:text="@string/count_down_text_1"
            android:textSize="@dimen/count_down_text_size" />
    
</RelativeLayout>