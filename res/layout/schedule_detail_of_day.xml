<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/schedule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/schedule_detail_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/schedule_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scheudle_message"
            android:textSize="@dimen/schedule_detail_message" />

        <TextView
            android:id="@+id/schedule_detail_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/schedule_detail_message"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/schedule_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/schedule_host" 
            android:textSize="@dimen/schedule_detail_message"/>

        <TextView
            android:id="@+id/schedule_detail_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="@dimen/schedule_detail_message"/>

    </LinearLayout>

</LinearLayout>
