<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.Sherlock.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
  		<item name="actionBarTabTextStyle">@style/MyActiongBarStyle.Tab.Text</item>
  		<item name="android:actionBarTabTextStyle">@style/MyActiongBarStyle.Tab.Text</item>
    </style>
    
    <style name="MyActionBarStyle" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
  		<item name="android:background">@color/action_bar_background</item>
    </style>
    
	
    
   	<style name="MyActiongBarStyle.Tab.Text" parent="@style/Widget.Sherlock.Light.ActionBar.TabText">
		<item name="android:textSize">@dimen/action_bar_tab_text</item>
		<item name="android:textColor">@color/action_bar_tab_text</item>
   	</style>
        

</resources>
